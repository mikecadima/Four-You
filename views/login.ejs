							<h1 class="title has-text-black">Login Page</h1>
							<% if (messages.error) { %> <%= messages.error %> <% } %>
							<form class="box" action="/login" method="POST">
								<div>
									<label class="subtitle has-text-black" for="email">Email</label>
									<input type="email" id="email" name="email" required />
								</div>
								<div>
									<label class="subtitle has-text-black" for="password">Password</label>
									<input
										type="password"
										id="password"
										name="password"
										required
									/>
								</div>
								<button type="submit">Login</button>
							</form>
							<a href="/register">Register</a>
						</div>
					</div>
				</div>
