<!doctype html>
<html lang="en">
    <head>
    {{> header}}
    <title>Explore</title>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    </head>
    <body>

    {{> menu}}

    {{username}}
    {{! <h1>Explorer</h1> }}
		
<!-- HERO SECTION -->
<!-- //////////////////////////////////////////////////////////////////////// -->		
<section class="hero is-black">
    <div class="hero-body">
            <h1 class="title">
                Explore
            </h1>
            <h2 class="subtitle">
                View other posts by other users!
            </h2>
            
        </div>
    </div>
</section>

<!-- START RE-PASTING HERE -->
<section>
<nav class="level mt-4">
<!-- Left side -->
<div class="level-left ml-4">
    <div class="level-item">
        <p class="subtitle is-5">
            <strong>123</strong> posts
        </p>
    </div>

    <div class="level-item">
        <div class="field has-addons">
            <p class="control">
                <input class="input" type="text" placeholder="Find a post">
            </p>

            <p class="control">
                <button class="button">
                    Search
                </button>
            </p>
        </div>
    </div>
</div>

<!-- RIGHT SIDE OF NAV CONTROLS -->
<!-- ////////////////////////////////////////////////////////////////////// -->
{{! <div class="level-right mr-4">
    <p class="level-item"><strong>All</strong></p>
    <p class="level-item"><a>Liked</a></p>
    <p class="level-item"><a>Disliked</a></p>
    <p class="level-item"><a href="/newpost" class="button is-black">New</a>
    {{! <a class="button is-black">New</a> }}
    </p>
</div>
</nav>
</section>

<!-- START OF CARD SECTION #1-->
<!-- ////////////////////////////////////////////////////////////////////// -->
<!-- CARD 1 -->
{{#posts}}
<div class="columns is-multiline">
    <div class="column is-half">
        <div class="card mt-4 ml-5">
            <div class="card-content">
    <h2 class="title">{{title}}</h2>
    <h4 class="subtitle">@{{username}} & {{date_created}}</h4>

    <a href="https://placeholder.com"><img src="/image/{{blog_img}}"></a>
</div>
<footer class="card-footer">
    <div class="card-footer-item">
        <a href="#" class="button is-primary">
            <i class="fa fa-thumbs-up" aria-hidden="false"></i>
        </a>
    </div>

                    <div class="card-footer-item">
                        <a href="/newmessages" class="button is-warning">
                            <i class="fa fa-comments" aria-hidden="false"></i>
                        </a>
                    </div>

    <div class="card-footer-item">
        <a href="#" class="button is-danger">
            <i class="fa fa-thumbs-down" aria-hidden="false"></i>
        </a>
    </div>
</footer>
</div>
</div>
{{/posts}}
